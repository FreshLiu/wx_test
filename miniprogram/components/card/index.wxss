.card-container {
    width: 598rpx;
    background: #fff;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(53, 53, 53, 0.2);
    border-radius: 12rpx;
    padding: 40rpx;
    margin: 0 auto;
}

.content-top {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50rpx;
}

.title {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #353535;
    line-height: 40rpx;
    margin-bottom: 24rpx;
}

.name {
    height: 68rpx;
    font-size: 48rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #000;
    line-height: 68rpx;
    margin-right: 32rpx;
    vertical-align: bottom;
}

.position {
    height: 38rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    line-height: 38px;
    color: #353535;
    vertical-align: bottom;
}

.avatar {
    width: 124rpx;
    height: 124rpx;
}

.avatarImage {
    width: 100%;
    height: 100%;
}

.telephone-icon, .email-icon {
    margin-right: 20rpx;
}

.telephone-number, .email-account {
    height: 38rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #353535;
    line-height: 40rpx;
}
